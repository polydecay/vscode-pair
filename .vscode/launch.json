{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/build/src/**/*.js"],
            "preLaunchTask": "build"
        }
    ]
}
